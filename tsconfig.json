{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "outDir": "./dist",
        "removeComments": true,
        "noLib": false,
        "target": "es6",
        "sourceMap": false,
        "lib": [
            "es6"
        ],
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts",
        "**/*.ts",
    ]
}